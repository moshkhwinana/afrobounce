<%= simple_form_for @contact_message, url: contact_messages_path, method: :post do |f| %>
  <div class="form-group">  <!--for styling-->
    <%= f.input :name, label: "Name", input_html: { class: "form-control" } %>
  </div>

  <div class="form-group">
    <%= f.input :email, label: "Email", input_html: { class: "form-control" }, as: :email %>
  </div>

  <div class="form-group">
    <%= f.input :message, label: "Your Message", input_html: { class: "form-control" }, as: :text %>
  </div>

  <div class="form-group">
    <%= f.button :submit, "Send", class: "btn btn-primary" %>
  </div>
<% end %>
