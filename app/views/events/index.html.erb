<div class="events-container">
  <h1>Gallery</h1>
  <h3>Capturing you getting lost in the sauce</h3>

  <div class="events-flex-card">
    <% @events.each do |event| %>

      <div class="img-div">
        <% if event.image.attached? %>
          <%= image_tag event.image, class: "event-image" %>
        <% end %>
      </div>

      <div class="event-text">
        <h5><% event.name %></h5>
        <p><% event.date %></p>
      </div>
    <% end %>
  </div>
</div>

