<div class="events-container">
  <h1>Gallery</h1>
  <h3>Capturing you getting lost in the sauce</h3>

  <div class="event-card">
    <% @events.each do |event| %>
      <% if event.image.attached? %>
        <%= image_tag event.image, class: "event-image" %>
      <% end %>
      <p><% event.name %></p>
      <p><% event.date %></p>
    <% end %>
  </div>
</div>
