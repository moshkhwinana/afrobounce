<div class="images-container">
  <h1>Images</h1>

  <% if current_admin %>
    <%= link_to 'Add images', new_event_image_path, class: "btn btn-primary"  %>
  <% end %>

  <% @images.each do |image| %>
    <div class="image-card">
      <%= image_tag image, class: "image", size: "300x200" %>
    </div>
  <% end %>
</div>
